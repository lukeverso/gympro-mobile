{
     "expo": {
          "name": "teachers",
          "slug": "teachers",
          "version": "1.0.0",
          "orientation": "portrait",
          "icon": "./assets/icon.png",
          "userInterfaceStyle": "light",
          "splash": {
               "image": "./assets/splash.png",
               "resizeMode": "cover",
               "backgroundColor": "#000000"
          },
          "assetBundlePatterns": [
               "**/*"
          ],
          "ios": {
               "supportsTablet": true
          },
          "android": {
               "adaptiveIcon": {
                    "foregroundImage": "./assets/adaptive-icon.png",
                    "backgroundColor": "#000000"
               }
          },
          "web": {
               "favicon": "./assets/favicon.png"
          },
          "plugins": [
               [
                    "expo-barcode-scanner",
                    {
                         "cameraPermission": "Permita que o app use sua câmera para escanear o código do aluno."
                    }
               ],
               [
                    "expo-image-picker",
                    {
                         "photosPermission": "Permita que o app obtenha acesso à sua galeria para a escolha da foto de perfil."
                    }
               ]
          ]
     }
}